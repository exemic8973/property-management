{
  "name": "property-os",
  "version": "0.1.0",
  "private": true,
  "description": "Property Management System - Multi-tenant property management platform",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev",
    "build": "npx prisma generate --schema=packages/database/prisma/schema.prisma && turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "npx prisma generate --schema=packages/database/prisma/schema.prisma",
    "db:push": "npx prisma db push --schema=packages/database/prisma/schema.prisma",
    "db:migrate": "npx prisma migrate dev --schema=packages/database/prisma/schema.prisma",
    "db:studio": "npx prisma studio --schema=packages/database/prisma/schema.prisma"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "prisma": "^5.8.0",
    "turbo": "^2.0.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.19.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "bcrypt",
      "sharp"
    ]
  }
}
